<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".Create_Sheet">
    <TextView
            android:text="@string/Strength"
            android:layout_width="125dp"
            android:layout_height="30dp"
            android:id="@+id/textView" app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="80dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="285dp"
            android:layout_marginRight="285dp" android:textSize="22sp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="2dp" android:layout_marginStart="2dp" android:layout_marginBottom="34dp"
            app:layout_constraintBottom_toTopOf="@+id/textView4"/>
    <TextView
            android:text="@string/Character_Name"
            android:layout_width="129dp"
            android:layout_height="33dp"
            android:id="@+id/textView3"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="280dp"
            android:layout_marginRight="280dp" android:textSize="22sp"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="2dp" android:layout_marginStart="2dp"
            app:layout_constraintHorizontal_bias="0.0"
            android:layout_marginTop="103dp" app:layout_constraintTop_toBottomOf="@+id/textView8"/>
    <TextView
            android:text="@string/Charisma"
            android:layout_width="129dp"
            android:layout_height="33dp"
            android:id="@+id/textView8"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="280dp"
            android:layout_marginRight="280dp" android:textSize="22sp"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="2dp" android:layout_marginStart="2dp" android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@+id/WisdomText" android:layout_marginBottom="103dp"
            app:layout_constraintBottom_toTopOf="@+id/textView3"/>
    <TextView
            android:text="@string/Wisdom"
            android:layout_width="129dp"
            android:layout_height="33dp"
            android:id="@+id/textView7"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="284dp"
            android:layout_marginRight="284dp" android:textSize="22sp" android:layout_marginTop="31dp"
            app:layout_constraintTop_toBottomOf="@+id/textView6" app:layout_constraintStart_toStartOf="parent"
    />
    <TextView
            android:text="@string/Intelligence"
            android:layout_width="129dp"
            android:layout_height="33dp"
            android:id="@+id/textView6"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="280dp"
            android:layout_marginRight="280dp" android:textSize="22sp" android:layout_marginTop="13dp"
            app:layout_constraintTop_toBottomOf="@+id/ConstitutionText" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="2dp" android:layout_marginStart="2dp" android:layout_marginBottom="31dp"
            app:layout_constraintBottom_toTopOf="@+id/textView7"/>
    <TextView
            android:text="@string/Constitution"
            android:layout_width="129dp"
            android:layout_height="33dp"
            android:id="@+id/textView5"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="284dp"
            android:layout_marginRight="284dp" android:textSize="22sp" android:layout_marginTop="34dp"
            app:layout_constraintTop_toBottomOf="@+id/textView4" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginBottom="27dp" app:layout_constraintBottom_toTopOf="@+id/textView6"/>
    <TextView
            android:text="@string/Dexterity"
            android:layout_width="125dp"
            android:layout_height="30dp"
            android:id="@+id/textView4"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="284dp"
            android:layout_marginRight="284dp" android:textSize="22sp" android:layout_marginTop="34dp"
            app:layout_constraintTop_toBottomOf="@+id/textView" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="2dp" android:layout_marginStart="2dp"
    />
    <EditText
            android:layout_width="211dp"
            android:layout_height="47dp"
            android:inputType="number"
            android:ems="10"
            android:id="@+id/ConstitutionText" android:layout_marginTop="17dp"
            app:layout_constraintTop_toBottomOf="@+id/DexterityText" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="72dp" android:layout_marginRight="72dp" android:hint="@string/Constitution_Base"
            android:importantForAutofill="no"/>
    <EditText
            android:layout_width="211dp"
            android:layout_height="47dp"
            android:inputType="number"
            android:ems="10"
            android:id="@+id/DexterityText" android:layout_marginTop="17dp"
            app:layout_constraintTop_toBottomOf="@+id/StrengthText" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="73dp" android:layout_marginRight="73dp" android:hint="@string/Dexterity_Base"
            android:importantForAutofill="no"/>
    <EditText
            android:layout_width="211dp"
            android:layout_height="47dp"
            android:inputType="number"
            android:ems="10"
            android:id="@+id/StrengthText" android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@+id/classes_spinner" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="74dp" android:layout_marginRight="74dp" android:hint="@string/Strength_Base"
            android:importantForAutofill="no"/>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/Class" tools:text="@string/Class"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="5dp"
            android:layout_marginStart="5dp" android:textSize="22sp" android:layout_marginTop="32dp"
            app:layout_constraintTop_toTopOf="parent" android:text="@string/Class"/>
    <Spinner
            android:id="@+id/classes_spinner"
            android:layout_width="150dp"
            android:layout_height="34dp"
            android:entries="@array/CLasses" app:layout_constraintTop_toTopOf="parent" android:layout_marginTop="32dp"
            app:layout_constraintStart_toEndOf="@+id/Class" android:layout_marginLeft="68dp"
            android:layout_marginStart="68dp" android:visibility="visible"/>
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="numberSigned"
            android:ems="10"
            android:id="@+id/IntelligenceText" android:layout_marginTop="13dp"
            app:layout_constraintTop_toBottomOf="@+id/ConstitutionText" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="67dp" android:layout_marginRight="67dp" android:hint="@string/Intelligence_Base"
            android:importantForAutofill="no"/>
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="numberSigned"
            android:ems="10"
            android:id="@+id/WisdomText" android:layout_marginTop="19dp"
            app:layout_constraintTop_toBottomOf="@+id/IntelligenceText" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="70dp" android:layout_marginRight="70dp" android:hint="@string/Wisdom_Base"
            android:importantForAutofill="no"/>
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="numberSigned"
            android:ems="10"
            android:id="@+id/CharismaText" android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@+id/WisdomText" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="67dp" android:layout_marginRight="67dp" android:hint="@string/Charisma_Base"
            android:importantForAutofill="no"/>
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/NameText" android:layout_marginTop="91dp"
            app:layout_constraintTop_toBottomOf="@+id/CharismaText" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="67dp" android:layout_marginRight="67dp"
            android:hint="@string/Character_Name_Hint" android:importantForAutofill="no"
            android:text="@string/CharName"/>
    <ImageButton
            android:layout_width="49dp"
            android:layout_height="43dp" app:srcCompat="@drawable/roll20"
            android:id="@+id/image_Roll_CHA" android:scaleType="fitXY"
            app:layout_constraintStart_toEndOf="@+id/CharismaText" android:layout_marginLeft="16dp"
            android:layout_marginStart="16dp" android:layout_marginTop="21dp"
            app:layout_constraintTop_toBottomOf="@+id/image_Roll_WIS"/>
    <ImageButton
            android:layout_width="49dp"
            android:layout_height="43dp" app:srcCompat="@drawable/roll20"
            android:id="@+id/image_Roll_WIS" android:scaleType="fitXY"
            app:layout_constraintStart_toEndOf="@+id/WisdomText" android:layout_marginLeft="16dp"
            android:layout_marginStart="16dp" android:layout_marginTop="21dp"
            app:layout_constraintTop_toBottomOf="@+id/image_Roll_INT"/>
    <ImageButton
            android:layout_width="49dp"
            android:layout_height="43dp" app:srcCompat="@drawable/roll20"
            android:id="@+id/image_Roll_INT" android:scaleType="fitXY"
            android:layout_marginTop="21dp"
            app:layout_constraintTop_toBottomOf="@+id/image_Roll_CON"
            app:layout_constraintStart_toEndOf="@+id/IntelligenceText" android:layout_marginLeft="16dp"
            android:layout_marginStart="16dp"/>
    <ImageButton
            android:layout_width="49dp"
            android:layout_height="43dp" app:srcCompat="@drawable/roll20"
            android:id="@+id/image_Roll_CON" android:scaleType="fitXY"
            android:layout_marginTop="21dp"
            app:layout_constraintTop_toBottomOf="@+id/image_Roll_DEX"
            app:layout_constraintStart_toEndOf="@+id/ConstitutionText" android:layout_marginLeft="16dp"
            android:layout_marginStart="16dp"/>
    <ImageButton
            android:layout_width="49dp"
            android:layout_height="43dp" app:srcCompat="@drawable/roll20"
            android:id="@+id/image_Roll_DEX" android:scaleType="fitXY"
            android:layout_marginTop="21dp"
            app:layout_constraintTop_toBottomOf="@+id/image_Roll_STR"
            app:layout_constraintStart_toEndOf="@+id/DexterityText" android:layout_marginLeft="16dp"
            android:layout_marginStart="16dp"/>
    <ImageButton
            android:layout_width="49dp"
            android:layout_height="43dp" app:srcCompat="@drawable/roll20"
            android:id="@+id/image_Roll_STR" android:scaleType="fitXY"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginTop="80dp"
            app:layout_constraintStart_toEndOf="@+id/StrengthText" android:layout_marginLeft="16dp"
            android:layout_marginStart="16dp"/>
    <Button
            android:text="@string/Next"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="18dp" android:id="@+id/Next_Button" android:layout_marginLeft="30dp"
            android:layout_marginStart="30dp" app:layout_constraintStart_toEndOf="@+id/classes_spinner"/>
</androidx.constraintlayout.widget.ConstraintLayout>