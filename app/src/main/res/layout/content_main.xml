            android:layout_marginLeft="2dp" android:layout_marginStart="2dp" app:layout_constraintEnd_toEndOf="parent"
            android:contentDescription="@string/Image_background"/>
    <Button
            android:text="@string/create_sheet"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/button" app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="192dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="154dp" android:layout_marginStart="154dp" android:layout_marginEnd="134dp"
            android:layout_marginRight="134dp" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" android:layout_marginBottom="435dp"
            app:layout_constraintHorizontal_bias="1.0" app:layout_constraintVertical_bias="1.0"/>
</androidx.constraintlayout.widget.ConstraintLayout>